@using Daraz101_Services
@model IEnumerable<OrderDTO>
@{
    ViewData["Title"] = "Order History";
}

<h2>Your Orders</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You haven't placed any orders yet.</div>
}
else
{
    <table class="table">
        <thead class="table-light">
            <tr>
                <th>Order #</th>
                <th>Date</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>$@order.OrderTotal</td>
                    @* <td><a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">View</a></td> *@
                </tr>
            }
        </tbody>
    </table>
}
